<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Posts</a>
    </div>
    <div class="navbar-collapse">
      <ul class="nav navbar-nav">
        <li>
          <%=link_to("Create a new post", new_post_path) %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
        </li>
      </ul>
    </div>
  </div>
</nav>

<%= bootstrap_form_for(@post, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-6") do |form| %>
  <%= form.text_field :image_link, :placeholder => "Post image Url" %>
  <%= form.submit %>
<% end %>

<div class="container">
<h1>Posts</h1>
<ul>
  <% Post.all.each do |c| %>
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= "Post id: " +  c.id.to_s %></h3>
        </div>
        <div class="panel-body">
          <%= image_tag(c.image_link, width: 500, class: 'img-responsive img-thumbnail') %>
        </div>
        <div class="panel-footer">
          <span class="label label-default"><%= "Created by: " + c.user.email %></span>
            <% if current_user == c.user %>

            <%= link_to(edit_post_path(c), class: 'btn btn-default btn-xs pull-right') do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
            <% end %>
            <%= link_to(post_path(c), method: :delete, class: 'btn btn-danger btn-xs pull-right') do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
            <% end %>

            <% end %>
        </div>
      </div>
    </div>
  <% end %>
</ul>
</div>
